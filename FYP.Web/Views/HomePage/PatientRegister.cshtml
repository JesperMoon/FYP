
@{
    ViewBag.Title = "Web App For Doctor - Register Patient";
}

<meta name="viewport" content="width=device-width, initial-scale=0.5">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<style>
    /* Frame styling */
    body {
        background-color: aqua;
    }

    .jumbotron {
        background-color: white;
    }

    /* Styling for Back Button */
    .backButton {
        text-align: left;
        text-decoration: none !important;
        color: inherit !important;
        border-radius: 50px;
        font-size: 75px;
        position: static;
        /*margin: 10px;*/
        /*padding: 12px 0;*/
    }

        .backButton:hover {
            background-color: white;
            text-decoration: none !important;
            color: #18a1e5 !important;
        }

    input[type=submit] {
        width: auto;
        height: auto;
        font-size: 20px;
    }

    p1 {
        overflow: auto;
        white-space: nowrap;
        font-size: 40px;
        font-weight: bold;
    }

    p2 {
        font-size: 18px;
        color: red;
        font-style: italic;
    }

    ::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
        color: lightgray;
    }

    :-ms-input-placeholder { /* Internet Explorer 10-11 */
        color: lightgray;
    }

    ::-ms-input-placeholder { /* Microsoft Edge */
        color: lightgray;
    }
</style>

@model FYP.Entities.PatientViewModel

<html>
<body>
    <div class="jumbotron">
        <div class="row">
            <a class="col-lg-3 col-xs-3 backButton" href="@Url.Action("PatientLogin", "HomePage")">
                <span class="fa fa-arrow-circle-left"></span>
            </a>
            <div class="col-lg-9 col-9 text-center">
                <p1>User Registration Form</p1>
            </div>
        </div>

        <br />

        @using (Html.BeginForm("PatientRegister", "HomePage"))
        {
        <div class="table-condensed">

            @* First Name *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.FirstName) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.FirstName)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.FirstName)</p2></div>
            </div>

            @* Last Name *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.LastName) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.LastName)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.LastName)</p2></div>
            </div>

            @* Gender *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.Gender) : </p></div>
                <div class="col-lg-2 col-2"><p>@Html.RadioButtonFor(m => m.Gender, "Male", new { Checked = "checked", Value = "Male" }) Male</p></div>
                <div class="col-lg-2 col-2"><p>@Html.RadioButtonFor(m => m.Gender, "Female") Female</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.Gender)</p2></div>
            </div>

            @* Religion *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.Religion) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EnumDropDownListFor(m => m.Religion, new { @class = "form-control" })</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.Religion)</p2></div>
            </div>

            @* Date of Birth *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.DateOfBirth) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control datepicker", type = "date" })</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.DateOfBirth)</p2></div>
            </div>

            @* Email Address conflict *@
            @if (TempData["ConflictEmailAddress"] != "")
            {
                <div class="row">
                    <div class="col-lg-1 col-1"></div>
                    <div class="col-lg-8 col-8">
                        <div class="alert alert-danger" role="alert">
                            The email address is already in use!
                        </div>
                    </div>
                    <div class="col-lg-3 col-3"></div>
                </div>
            }

            @* Email Address *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.EmailAddress) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.EmailAddress)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.EmailAddress)</p2></div>
            </div>

            @* Reconfirm Email Address *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.ReconfirmEmail) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.ReconfirmEmail)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.ReconfirmEmail)</p2></div>
            </div>

            @* UserName *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.UserName) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.UserName)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.UserName)</p2></div>
            </div>

            @* Password *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.Password) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.PasswordFor(m => m.Password)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.Password)</p2></div>
            </div>

            @* Reconfirm Password *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.RetypePassword) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.PasswordFor(m => m.RetypePassword)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.RetypePassword)</p2></div>
            </div>

            @* Contact Number 1 *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p> Contact Number : </p></div>
                <div class="col-lg-4 col-4"><p>1) @Html.EditorFor(m => m.ContactNumber1, new { htmlAttributes = new { @placeholder = "0123456789", input = "numeric", @style = "width : 245px " } })</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.ContactNumber1)</p2></div>
            </div>

            @* Contact Number 2 *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"></div>
                <div class="col-lg-4 col-4"><p>2) @Html.EditorFor(m => m.ContactNumber2, new { htmlAttributes = new { @placeholder = "0123456789", input = "numeric", @style = "width : 245px " } })</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.ContactNumber2)</p2></div>
            </div>

            @* Contact Number 3 *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"></div>
                <div class="col-lg-4 col-4"><p>3) @Html.EditorFor(m => m.ContactNumber3, new { htmlAttributes = new { @placeholder = "0123456789", input = "numeric", @style = "width : 245px " } })</p></div>
                <div class="col-lg-3 col-3"></div>
            </div>

            @* Home Address Line 1 *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p> Home Address : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.HomeAddressLine1)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.HomeAddressLine1)</p2></div>
            </div>

            @* Home Address Line 2 *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.HomeAddressLine2)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.HomeAddressLine2)</p2></div>
            </div>

            @* Home Address Line 3 *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.HomeAddressLine3)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.HomeAddressLine3)</p2></div>
            </div>

            @* Postal Code *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.PostalCode) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.PostalCode, new { htmlAttributes = new { @placeholder = "52100", maxlength = "5", input = "numeric", @style = "width: 150px" } })</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.PostalCode)</p2></div>
            </div>

            @* City *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.City)</p></div>
                <div class="col-lg-4 col-4"><p>@Html.EditorFor(m => m.City)</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.City)</p2></div>
            </div>

            @* State *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.State) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EnumDropDownListFor(m => m.State, new { @class = "form-control" })</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.State)</p2></div>
            </div>

            @* Postal Code
        <div class="row">
            <div class="col-lg-1 col-1"></div>
            <div class="col-lg-3 col-3"><p>@Html.DisplayNameFor(m => m.PostalCode) : </p></div>
            <div class="col-lg-1 col-1"><p>@Html.EditorFor(m => m.PostalCode, new { htmlAttributes = new { @placeholder = "52100", maxlength = "5", input = "numeric", @style = "width: 100px" } })</p></div>
            <div class="col-lg-2 col-2"><p2>@Html.ValidationMessageFor(m => m.PostalCode)</p2></div>

            <div class="col-lg-2 col-2"><p>@Html.DisplayNameFor(m => m.State) :</p></div>
            <div class="col-lg-2 col-2"><p>@Html.EnumDropDownListFor(m => m.State, new { @class = "form-control" })</p></div>
            <div class="col-lg-1 col-1"><p2>@Html.ValidationMessageFor(m => m.State)</p2></div>
        </div>*@

            @* Blood Type *@
            <div class="row">
                <div class="col-lg-1 col-1"></div>
                <div class="col-lg-4 col-4"><p>@Html.DisplayNameFor(m => m.BloodType) : </p></div>
                <div class="col-lg-4 col-4"><p>@Html.EnumDropDownListFor(m => m.BloodType, new { @class = "form-control", @style = "width : 100px" })</p></div>
                <div class="col-lg-3 col-3"><p2>@Html.ValidationMessageFor(m => m.BloodType)</p2></div>
            </div>

            @* Submit Button *@
            <div class="row">
                <div class="col-lg-3 col-xs-3"></div>
                <div class="col-lg-3 col-xs-3"></div>
                <div class="col-lg-6 col-xs-6">
                    <input type="submit" value="Register" name="Submit" class="btn btn-success" />
                </div>
            </div>
        </div>
        }
    </div>
</body>
</html>

