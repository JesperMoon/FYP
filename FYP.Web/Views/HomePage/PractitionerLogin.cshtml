
@{
    ViewBag.Title = "Web App For Doctor - Practitioner Login";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<style>
    /* Frame styling */
    body {
        background-color: aqua;
    }

    .jumbotron {
        background-color: white;
    }

    /* Styling for Logo Center */
    .menuItem {
        text-align: center;
        padding: 12px 0;
        text-decoration: none !important;
        color: black;
        border-radius: 50px;
        /*color: inherit !important;*/
        /*background-color: lightgray;*/
    }

    .menuItem span {
        font-size: 150px;
    }

    /* Styling for Back Button */
    .backButton {
        text-align: left;
        text-decoration: none !important;
        color: inherit !important;
        border-radius: 50px;
        font-size: 75px;
        position: static;
        /*margin: 10px;*/
        /*padding: 12px 0;*/
    }

    .backButton:hover {
        background-color: white;
        text-decoration: none !important;
        color: #18a1e5 !important;
    }

    input[type=submit] {
        width:auto;
        height: auto;
        font-size: 20px;
    }

    /*.menuItem span,
    .menuItem .fa {
        font-size: 150px;
    }*/
</style>

@model FYP.Entities.LoginInfo

<html>
<body>
    <div class="jumbotron">
        <div class="row">
            <a class="col-lg-3 col-xs-3 backButton" href="@Url.Action("Index", "HomePage")">
                <span class="fa fa-arrow-circle-left"></span>
            </a>
        </div>

        <div class="row">
            <div class="col-lg-4 col-xs-4"></div>
            <div class="col-lg-4 col-xs-4 menuItem">
                <span class="fa fa-stethoscope"></span>
            </div>
            <div class="col-lg-4 col-xs-4"></div>
        </div>

        <br />

        @using (Html.BeginForm("PractitionerLogin", "HomePage"))
        {
            <div class="row">
                <div class="col-lg-3 col-xs-3"></div>
                <div class="col-lg-3 col-xs-3"><p>@Html.DisplayNameFor(m => m.EmailAddress) : </p></div>
                <div class="col-lg-3 col-xs-3"><p>@Html.TextBoxFor(m => m.EmailAddress)</p></div>
                <div class="col-lg-3 col-xs-3"></div>
            </div>
            @Html.ValidationMessageFor(m => m.EmailAddress)

            <div class="row">
                <div class="col-lg-3 col-xs-3"></div>
                <div class="col-lg-3 col-xs-3"><p>@Html.DisplayNameFor(m => m.Password) : </p></div>
                <div class="col-lg-3 col-xs-3"><p>@Html.TextBoxFor(m => m.Password) </p></div>
                <div class="col-lg-3 col-xs-3"></div>
            </div>
            @Html.ValidationMessageFor(m => m.Password)
            
            <div class="row">
                <div class="col-lg-3 col-xs-3"></div>
                <div class="col-lg-3 col-xs-3"></div>
                <div class="col-lg-6 col-xs-6">
                    <input type="submit" value="Login" name="Submit" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</body>
</html>