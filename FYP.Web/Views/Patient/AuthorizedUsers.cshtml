
@{
    ViewBag.Title = "AuthorizedUsers";
    Layout = "~/Views/Shared/PatientLayout.cshtml";
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=0.30">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
@section Scripts
{
    <script type="text/javascript">

        window.onload = function ajaxAuthorizedPractitionerTable() {
            var serviceURL = '@Url.Action("AuthorizedUsers", "Patient")';
            var patientId = @Html.Raw(Json.Encode(Model.AccId));
            var data = JSON.stringify({ patientId : patientId });

            $.ajax({
                type: "POST",
                cache: false ,
                url: serviceURL,
                data: data,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function success(result) {
                    var trHTML = '';
                    var accId = @Html.Raw(Json.Encode(Model.AccId));

                    if (result.AuthorizedPractitionersTable.length == 0) {
                        trHTML += '<tr><td colspan="7" style="text-align:center;color:red;">' + 'No authorized practitioner yet.' + '</td></tr>';
                    } else {
                        $.each(result.AuthorizedPractitionersTable, function (i, item) {
                            trHTML += '<tr><td><a href="' + '@Url.Action("SpecialistProfile","Patient")' + '?specialistId=' + item.PractitionerId + '&accId=' + accId + '" target="_blank"><p>' + item.PractitionerName + '</p></a></td><td><p>' + item.Specialist + '</p></td><td><p>' + item.CompanyName + '</p></td><td><p>' + item.PostalCode + '</p></td><td><p>' + item.City + '</p></td><td><p>' + item.State + '</p></td><td><p>' + item.CreatedOn + '</p></td></tr>';
                        });
                    }
                    document.getElementById("content").innerHTML = trHTML;
                },
                error: function error() {
                    windows.alert("Somethings wrong...Contact admin for further assistance.");
                }
            });
        };
    </script>
}
