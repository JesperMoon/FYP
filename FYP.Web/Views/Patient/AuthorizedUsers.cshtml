
@{
    ViewBag.Title = "AuthorizedUsers";
    Layout = "~/Views/Shared/PatientLayout.cshtml";
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=0.30">

<style>
    body {
        background-color: rgb(79,190,197);
    }

    /* Body styling */
    /* Frame styling */
    .jumbotron {
        margin-left: 20px;
        margin-right: 20px;
        border-radius: 10px;
        background-color: white;
    }


    /* Styling for Back Button */
    .backButton {
        text-align: right;
        text-decoration: none !important;
        color: inherit !important;
        border-radius: 100px;
        font-size: 75px;
        position: static;
        /*margin: 10px;*/
        /*padding: 12px 0;*/
    }

        .backButton:hover {
            background-color: white;
            text-decoration: none !important;
            color: #18a1e5 !important;
        }

        th{
            text-align:center;
        }
</style>

@model FYP.Entities.ViewModel.PatientBaseViewModel

<div class="jumbotron">
    <div class="row">
        <div><h2 style="text-align:center">-- <b>Authorized Users</b> --</h2></div>
    </div>

    <br/>

    <div class="container">
        <table class="table-bordered table-condensed table-hover" style="background-color:lightgray;">
            <thead class="row">
                <tr>
                    <th class="col-2 col-xs-2 col-sm-2 col-md-2 col-lg-2"><p><b>Name</b></p></th>
                    <th class="col-2 col-xs-2 col-sm-2 col-md-2 col-lg-2"><p><b>Role</b></p></th>
                    <th class="col-2 col-xs-2 col-sm-2 col-md-2 col-lg-2"><p><b>Specialist</b></p></th>
                    <th class="col-3 col-xs-3 col-sm-3 col-md-3 col-lg-3"><p><b>Company</b></p></th>
                    <th class="col-3 col-xs-3 col-sm-3 col-md-3 col-lg-3"><p><b>Date Added</b></p></th>
                </tr>
            </thead>
            <tbody id="content">
                @* Content generated by javascript *@
            </tbody>
        </table>
    </div>
</div>
