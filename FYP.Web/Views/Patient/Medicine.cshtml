@model FYP.Entities.ViewModel.PatientBaseViewModel

<div class="jumbotron">
    <div class="row">
        <div><h2 style="text-align:center">-- <b>Medicine Directory</b> --</h2></div>
    </div>

    <br />

    <div class="row">
        <div class="col-1 col-xs-1 col-sm-1 col-md-1 col-lg-1"></div>
        <div class="col-3 col-xs-3 col-sm-3 col-md-3 col-lg-3"><p>Medicine Name : </p></div>
        <div class="col-5 col-xs-5 col-sm-5 col-md-5 col-lg-5 input"><p>@Html.TextBoxFor(m => m.MedicineViewModel.SearchText, new { id = "searchText" })</p></div>
        <div class="col-3 col-xs-3 col-sm-3 col-md-3 col-lg-3"><p2>@Html.ValidationMessageFor(m => m.MedicineViewModel.SearchText)</p2></div>
    </div>

    <div style="text-align:center;">
        <div type="button" onclick="javascript:ajaxSearchUpdate()" class="btn btn-success" style="font-size:16px;">Search</div>
    </div>

    <br />
    <hr />
    <br />

    <div class="container">
        <table class="table-bordered table-condensed table-hover" style="background-color:lightgray;" id="table">
