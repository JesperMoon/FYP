
@{
    ViewBag.Title = "Medicine";
    Layout = "~/Views/Shared/PatientLayout.cshtml";
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=0.30">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript">
    function ajaxSearchUpdate() {
        var serviceURL = '@Url.Action("ProductSearch","Patient")';
        var searchText = $("#searchText").val();
        var data = JSON.stringify({ searchText: searchText });

        $.ajax({
            type: "POST",
            cache: false ,
            url: serviceURL,
            data: data,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function successFunc(result) {
                $('.container').show();

                var trHTML = '';
                var accId = @Html.Raw(Json.Encode(Model.AccId));

                if (result.length == 0) {
                    trHTML += '<tr><td colspan="7" style="text-align:center;color:red;">' + 'No medicine with search text above was being found. Please try again.' + '</td></tr>';
                } else {
                    $.each(result, function (i, item) {
                        trHTML += '<tr><td><p>' + (i + 1) + '</p></td><td><p>' + item.ProductCode + '</p></td><td><p>' + item.ProductName + '</p></td><td><p>' + item.CompanyPostalCode + '</p></td><td><p>' + item.CompanyState + '</p></td><td><a href="' + '@Url.Action("ViewCompanyProfile","Patient")' + '?companyId=' + item.CompanyId + '" target="_blank"><p>' + item.CompanyName + '</p></a></td><td><p>' + item.TotalAmount + '</p></td></tr>';
                    });
                }

                document.getElementById("content").innerHTML = trHTML;
            },
            error: function errorFunc() {
                windows.alert("Somethings wrong...Contact admin for further assistance.");
            }
        });
    }


    $(document).ready(function () {
        $('.container').hide();
    });
</script>

