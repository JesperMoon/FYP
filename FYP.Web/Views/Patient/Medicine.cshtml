                <tr>
                    <th><p><b>Index</b></p></th>
                    <th><p><b>Code</b></p></th>
                    <th><p><b>Product Name</b></p></th>
                    <th><p><b>Postal Code</b></p></th>
                    <th><p><b>State</b></p></th>
                    <th><p><b>Company Name</b></p></th>
                    <th><p><b>Quantity</b></p></th>
                </tr>
            </thead>
            <tbody id="content">
                @* Content generated by javascript *@
            </tbody>
        </table>
    </div>
</div>




