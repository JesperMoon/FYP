                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.QuantityForMedicine4</p></td>
            </tr>
        }

        @if (Model.NewPatientRecord.QuantityForMedicine5 > 0)
        {
            <tr>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.MedicineDropDown[Model.NewPatientRecord.MedicinesId5]</p></td>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.QuantityForMedicine5</p></td>
            </tr>
        }

        @if (Model.NewPatientRecord.QuantityForMedicine6 > 0)
        {
            <tr>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.MedicineDropDown[Model.NewPatientRecord.MedicinesId6]</p></td>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.QuantityForMedicine6</p></td>
            </tr>
        }

        @if (Model.NewPatientRecord.QuantityForMedicine7 > 0)
        {
            <tr>
