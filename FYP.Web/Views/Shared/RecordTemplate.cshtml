                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.QuantityForMedicine7</p></td>
            </tr>
        }

        @if (Model.NewPatientRecord.QuantityForMedicine8 > 0)
        {
            <tr>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.MedicineDropDown[Model.NewPatientRecord.MedicinesId8]</p></td>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.QuantityForMedicine8</p></td>
            </tr>
        }

        @if (Model.NewPatientRecord.QuantityForMedicine9 > 0)
        {
            <tr>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.MedicineDropDown[Model.NewPatientRecord.MedicinesId9]</p></td>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.QuantityForMedicine9</p></td>
            </tr>
        }

        @if (Model.NewPatientRecord.QuantityForMedicine10 > 0)
        {
            <tr>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.MedicineDropDown[Model.NewPatientRecord.MedicinesId10]</p></td>
                <td style="background-color:lightslategrey;"><p>@Model.NewPatientRecord.QuantityForMedicine10</p></td>
            </tr>
        }
    </table>
</body>
</html>

